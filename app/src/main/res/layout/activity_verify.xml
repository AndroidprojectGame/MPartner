<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_bg" />


    <EditText
        android:id="@+id/activity_verify_et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_bg"
        android:hint="Enter Code"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/activity_verify_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_verify_et_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="@string/text_otp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/activity_verify_bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_verify_et_id"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_button_bg"
        android:gravity="center"
        android:onClick="attemptLogin"
        android:padding="10dp"
        android:singleLine="true"
        android:text="Validate"
        android:textColor="@android:color/white" />

    <include
        layout="@layout/common_bottom_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
