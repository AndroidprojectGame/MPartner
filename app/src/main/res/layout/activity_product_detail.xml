<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:orientation="vertical">

    <include layout="@layout/toolbar_view_with_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/activity_product_detail_iv_product"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#FFFFFF"
                android:padding="5dp"
                android:adjustViewBounds="true" />

            <View
                android:id="@+id/divider"
                android:background="@drawable/shadow"
                android:layout_width="match_parent"
                android:layout_height="8sp"
                android:layout_below="@+id/activity_product_detail_iv_product"/>

            <TextView
                android:id="@+id/activity_product_detail_tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/actionbar_padding"
                android:padding="@dimen/padding_20"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/divider1"
                android:background="#dfdfdf"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/activity_product_detail_tv_description"/>

            <TextView
                android:id="@+id/activity_product_detail_tv_warranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/actionbar_padding"
                android:padding="@dimen/padding_20"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/divider2"
                android:background="#dfdfdf"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/activity_product_detail_tv_description"/>

            <TextView
                android:id="@+id/activity_product_detail_tv_key_feature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/actionbar_padding"
                android:padding="@dimen/padding_20"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/divider3"
                android:background="#dfdfdf"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/activity_product_detail_tv_description"/>

            <TextView
                android:id="@+id/activity_product_detail_tv_brochure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/actionbar_padding"
                android:padding="@dimen/padding_20"
                android:textColorLink="@color/text_color_blue"
                android:autoLink="all"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </ScrollView>

