<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_20"
    android:weightSum="5">

    <TextView
        android:id="@+id/item_report_tv_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/item_report_tv_ups"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:textColor="@color/text_color_profile_grey" />

    <TextView
        android:id="@+id/item_report_tv_battery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:textColor="@color/text_color_profile_grey" />

    <TextView
        android:id="@+id/item_report_tv_inverter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:textColor="@color/text_color_profile_grey" />

    <TextView
        android:id="@+id/item_report_tv_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/text_color_profile_grey" />

</LinearLayout>